## \w -> 0 to 9, a to z , A to Z , _
## \. -> look only for dot
## + -> one or more chars
## [\w\.-]+ -> I am looking for alpha num chars





import re


str = 'an example word: cat is jumping !!'
match = re.search(r'word:[\w\s]+', str)
# If-statement after search() tests if it succeeded
if match:
  print('found', match.group()) ## 'found word:cat'
else:
  print('did not find')

## Example to extract Phone numbers with extension




## Regex to check phone number, using VERBOSE
## you can spread the regular expression over multiple
## lines with comments like this:
#--------------
import re


phoneRegex = re.compile(r'''(
 (\d{3}|\(\d{3}\))?             #area code
 (\s|-|\.)?                     #separator
 \d{4}                          #first 4 digits
 (\s|-|\.)                      #separator
 \d{4}                          #last 4 digits
 (\s*(ext|x|ext.)\s*\d{2,5})?   # extension
 )''', re.VERBOSE)


mo1 = phoneRegex.search('Your no. is 022-2527-7413 ext 123')


if mo1 :
 print(mo1.group())
else :
 print("none")


mo2 = phoneRegex.search('Your no. is (022)-2527-7413')


if mo2 :
 print(mo2.group())
else :
 print("none")


mo3 = phoneRegex.search('Your no. is 98700-14450')


if mo3 :
 print(mo3.group())
else :
 print("none")


import re


str = 'an example word is 7756941233'
match = re.search(r'[89][0-9]{9}', str)
# If-statement after search() tests if it succeeded
if match:
  print('found', match.group())
else:
  print('did not find')


match=re.search(r'ii','piig')
if match:
  print('found', match.group())
else:
  print('did not find')

match=re.search(r'ab*c', 'abbbbbrefc')
if match:
  print('found', match.group())
else:
  print('did not find')

match=re.search(r'o*','pii485g')
if match:
  print('found', match.group())
else:
  print('did not find')
str = 'purple alice-b@google.com monkey bob-h@gmail.in dishwasher'
  match = re.search(r'([\w.-]+)@([\w+.-]+\.\w+)', str)
  if match:
    print(match.group())


str = 'purple alice@google.com, blah monkey bob@abc.com blah dishwasher'
emails = re.findall(r'[\w\.-]+@[\w\.-]+', str) ## ['alice@google.com', 'bob@abc.com']
for email in emails:
   print(email)
